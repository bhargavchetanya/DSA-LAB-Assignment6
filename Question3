#include <iostream>
using namespace std;

struct Node {
    int data;
    Node* next;
    Node* prev;
};

int sizeDoubly(Node* head) {
    int c = 0;
    while (head) {
        c++;
        head = head->next;
    }
    return c;
}

int sizeCircular(Node* head) {
    if (!head) return 0;
    int c = 0;
    Node* t = head;
    do {
        c++;
        t = t->next;
    } while (t != head);
    return c;
}

int main() {
    Node* d1 = new Node{1, new Node{2, new Node{3, nullptr, nullptr}, nullptr}, nullptr};
    cout << "Size of Doubly: " << sizeDoubly(d1) << "\n";
    Node* c1 = new Node{1, nullptr, nullptr};
    Node* c2 = new Node{2, nullptr, nullptr};
    Node* c3 = new Node{3, nullptr, nullptr};
    c1->next = c2; c2->next = c3; c3->next = c1;
    cout << "Size of Circular: " << sizeCircular(c1) << "\n";
}
